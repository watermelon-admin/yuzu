<!-- Cancel Subscription Modal (Pro only) -->
@if (Model.IsSubscribed)
{
    <div class="modal fade" id="membership-cancel-modal" tabindex="-1" aria-labelledby="membership-cancel-modal-label" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="membership-cancel-modal-label">Cancel Pro Membership</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div class="text-center mb-4">
                        <i class="bx bx-error-circle fs-1 text-danger"></i>
                        <h4 class="mt-3">Are you sure you want to cancel?</h4>
                    </div>

                    <div class="alert alert-warning">
                        <strong>Important:</strong> By canceling your subscription:
                    </div>

                    <ul>
                        <li>Your Pro membership will remain active until <strong>@Model.Subscription.ValidUntil</strong></li>
                        <li>You'll lose access to Pro features after this date</li>
                        <li>Custom break types and backgrounds will be unavailable</li>
                        <li>Your custom data will be preserved if you decide to resubscribe later</li>
                    </ul>

                    <div class="mb-3">
                        <label for="membership-cancel-reason" class="form-label">Please tell us why you're canceling:</label>
                        <select class="form-select" id="membership-cancel-reason" name="cancelReason" required>
                            <option value="" selected disabled>Please select a reason</option>
                            <option value="too_expensive">Too expensive</option>
                            <option value="not_using">Not using the service enough</option>
                            <option value="missing_features">Missing features I need</option>
                            <option value="switching">Switching to another service</option>
                            <option value="other">Other</option>
                        </select>
                    </div>

                    <div class="mb-3 d-none" id="membership-cancel-other-container">
                        <label for="membership-cancel-other-reason" class="form-label">Please specify:</label>
                        <textarea class="form-control" id="membership-cancel-other-reason" rows="2" placeholder="Tell us more..."></textarea>
                    </div>

                    <form id="membership-cancel-form">
                        @Html.AntiForgeryToken()
                        <input type="hidden" id="membership-cancel-subscription-id" name="subscriptionId" value="@Model.Subscription?.Id" />
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal" id="membership-cancel-back-button">Go Back</button>
                    <button type="button" class="btn btn-danger" id="membership-confirm-cancel-button" disabled>Cancel Subscription</button>
                </div>
            </div>
        </div>
    </div>
}

