<!-- Delete Break Type Confirmation Modal -->
<div class="modal fade" id="delete-break-type-modal" tabindex="-1" aria-labelledby="delete-break-type-modal-label" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="delete-break-type-modal-label">Delete Break Type</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p>Are you sure you want to delete the break type "<span id="delete-break-type-name"></span>"?</p>
                <p class="text-danger">This action cannot be undone. All associated data for this break type will be permanently removed.</p>
                <form id="delete-break-type-form">
                    @Html.AntiForgeryToken()
                    <input type="hidden" id="delete-break-type-id" name="BreakId" value="" />
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-danger" id="confirm-delete-btn">Delete</button>
            </div>
        </div>
    </div>
</div>

<!-- Break Type Preview Modal -->
<div class="modal fade" id="break-type-preview-modal" tabindex="-1" aria-labelledby="break-type-preview-modal-label" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="break-type-preview-modal-label">Break Type Preview</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body p-4">
                <div class="row align-items-center">
                    <div class="col-md-5">
                        <!-- Background Image Preview -->
                        <div class="position-relative mb-4 mb-md-0">
                            <img id="break-type-preview-background" src="" class="img-fluid rounded shadow-sm" alt="Background Image">
                        </div>
                    </div>
                    <div class="col-md-7">
                        <!-- Break Type Details -->
                        <h4 id="break-type-preview-title" class="mb-3 fw-bold"></h4>
                        
                        <div class="d-flex align-items-center mb-3">
                            <div class="me-4 p-2 bg-light rounded">
                                <i class="break-type-preview-icon bx bx-coffee-togo fs-1 text-primary"></i>
                            </div>
                            <div>
                                <div class="mb-2">
                                    <span class="badge bg-primary me-2">Duration</span>
                                    <span id="break-type-preview-duration" class="text-body"></span>
                                </div>
                                <div class="mb-2">
                                    <span class="badge bg-secondary me-2">Time Step</span>
                                    <span id="break-type-preview-time-step" class="text-body"></span>
                                </div>
                                <div>
                                    <span class="badge bg-info me-2">Usage</span>
                                    <span id="break-type-preview-usage" class="text-body"></span>
                                </div>
                            </div>
                        </div>
                        
                        <hr class="my-3">
                        
                        <div class="row g-3">
                            <div class="col-md-6">
                                <div class="small fw-semibold mb-1">Countdown Message</div>
                                <div id="break-type-preview-countdown-message" class="small">Minutes until break ends</div>
                            </div>
                            <div class="col-md-6">
                                <div class="small fw-semibold mb-1">End Message</div>
                                <div id="break-type-preview-end-message" class="small">Break is over</div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <button type="button" class="btn-edit-from-preview btn btn-primary">
                    <i class="bx bx-edit fs-sm me-1"></i>
                    Edit Break Type
                </button>
            </div>
        </div>
    </div>
</div>