@section Scripts {
    <!-- Video modal popup script -->
    <script>
        // Store the YouTube video URL
        const youtubeVideoUrl = "https://www.youtube.com/embed/8KaJRw-rfn8?autoplay=1";
        
        // Handle clicks on video play buttons
        document.addEventListener('DOMContentLoaded', function() {
            // Get the modal element
            const videoModal = document.getElementById('videoModal');
            
            // When the modal is shown, set the iframe src to the YouTube video URL
            videoModal.addEventListener('show.bs.modal', function (event) {
                document.getElementById('youtubeVideo').src = youtubeVideoUrl;
            });
            
            // When the modal is hidden, clear the iframe src to stop the video
            videoModal.addEventListener('hide.bs.modal', function (event) {
                document.getElementById('youtubeVideo').src = '';
            });
            
            // Add event listeners to all video play buttons
            const playButtons = document.querySelectorAll('.position-relative a.btn-icon');
            playButtons.forEach(button => {
                button.setAttribute('data-bs-toggle', 'modal');
                button.setAttribute('data-bs-target', '#videoModal');
                button.addEventListener('click', function(e) {
                    e.preventDefault();
                });
            });
        });
    </script>
