@page
@model ConfirmEmailModel
@{
    ViewData["Title"] = "Confirm email";
}

<!-- Page loading spinner -->
<div class="page-loading active">
    <div class="page-loading-inner">
        <div class="page-spinner"></div><span>Loading...</span>
    </div>
</div>

<main class="page-wrapper">

    <!-- NavBar -->
    <partial name="~/Pages/Shared/_NavBarPartialLight.cshtml" />

    <!-- Page content -->
    <section class="position-relative h-100 pt-5 pb-4">
        <!-- Sign in form -->
        <div class="container d-flex flex-wrap justify-content-center justify-content-xl-start h-100 pt-5">
            <div class="w-100 align-self-start pt-1 pt-md-4 pb-4" style="max-width: 526px;">
                @if (Model.ResultSucceeded)
                {
                    <h1 class="text-center text-xl-start">All Done!</h1>
                    <p class="text-center text-xl-start pb-3 mb-3">Congratulations! Your registration was successful. You're now ready to get started. If you have a moment, we've prepared a brief tutorial video to help you begin.</p>

                    <!-- Video gallery -->
                    <div class="gallery" data-video="true">
                        <a href="https://www.youtube.com/watch?v=8KaJRw-rfn8" class="gallery-item video-item rounded-3" data-sub-html='<h6 class="fs-sm text-light">Gallery video caption</h6>'>
                            <img src="~/img/account/tutorial-thumb.jpg" alt="Gallery thumbnail">
                            <div class="gallery-item-caption fs-sm fw-medium">Tutorial Video</div>
                        </a>
                    </div>
                    <a href="~/Start" class="btn btn-primary shadow-primary btn-lg w-100 mt-5">Get Started</a>
                }
                else
                {
                    <h1 class="text-center text-xl-start">That Did Not Work.</h1>
                    <p class="text-center text-xl-start pb-3 mb-3">Oops! Something went wrong, and we couldn't register your application. We've logged the issue and are already working on a fix. Please try again in a little while. Thank you for your patience!</p>
                    <a class="btn btn-primary shadow-primary btn-lg w-100 mt-5" asp-area="Identity" asp-page="/Account/Register">Try Again</a>
                }

            </div>
            <!-- Copyright -->
            <partial name="~/Pages/Shared/_Copyright.cshtml" />
        </div>

        <!-- Background -->
        <div class="position-absolute top-0 end-0 w-50 h-100 bg-position-center bg-repeat-0 bg-size-cover d-none d-xl-block" style="background-image: url(/img/account/signin-bg.jpg);"></div>
    </section>
</main>

<!-- Back to top button -->
<a href="#top" class="btn-scroll-top" data-scroll>
    <span class="btn-scroll-top-tooltip text-muted fs-sm me-2">Top</span>
    <i class="btn-scroll-top-icon bx bx-chevron-up"></i>
</a>

<!-- Client-side validation -->
@section scripts
{
    <partial name="_ValidationScriptsPartial" />

}

