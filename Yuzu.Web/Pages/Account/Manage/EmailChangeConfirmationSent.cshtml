@page
@model EmailChangeConfirmationSentModel
@{
    ViewData["Title"] = "Email Change Confirmation";
}

<!-- Page loading spinner -->
<div class="page-loading active">
    <div class="page-loading-inner">
        <div class="page-spinner"></div><span>Loading...</span>
    </div>
</div>

<main class="page-wrapper">

    <!-- NavBar -->
    <partial name="~/Pages/Shared/_NavBarPartialLight.cshtml" />

    <!-- Page content -->
    <section class="position-relative h-100 pt-5 pb-4">
        <div class="container d-flex flex-wrap justify-content-center justify-content-xl-start h-100 pt-5">
            <div class="w-100 align-self-start pt-1 pt-md-4 pb-4" style="max-width: 526px;">
                <h1 class="text-center text-xl-start">You've Got Mail.</h1>
                <p class="text-center text-xl-start pb-3 mb-3">
                    We've sent a confirmation link to your new email address <strong>@Model.NewEmail</strong>.
                    Please check your inbox and click on the link to complete your email change.
                </p>

                <div class="alert d-flex alert-info mt-4" role="alert">
                    <i class="bx bx-info-circle lead me-3"></i>
                    <div>
                        <strong>Important:</strong>
                        <ul class="mb-0 mt-2">
                            <li>The confirmation link will expire in 24 hours</li>
                            <li>Check your spam or junk folder if you don't see the email</li>
                            <li>Your current email will remain active until you confirm the change</li>
                        </ul>
                    </div>
                </div>

                <div class="alert d-flex alert-warning mt-3" role="alert">
                    <i class="bx bx-error-circle lead me-3"></i>
                    <div>
                        <strong>Security Tip:</strong> If you didn't request this email change, please contact support immediately and change your password.
                    </div>
                </div>

                <p class="text-center text-xl-start pb-3 mt-5 mb-3">
                    Need help? Feel free to <a href="~/Help">contact our support team</a>.
                </p>

                <hr class="my-4">
                <h6 class="text-center mb-4">Open your Inbox</h6>
                <div class="row row-cols-1 row-cols-sm-2">
                    <div class="col mb-3">
                        <a class="btn btn-icon btn-secondary btn-google btn-lg w-100" href="https://mail.google.com/mail/u/0/#inbox" target="_blank">
                            <i class="bx bxl-google fs-xl me-2"></i>
                            GMail
                        </a>
                    </div>
                    <div class="col mb-3">
                        <a class="btn btn-icon btn-secondary btn-microsoft btn-lg w-100" href="https://outlook.live.com/mail/inbox" target="_blank">
                            <i class="bx bxl-microsoft fs-xl me-2"></i>
                            Outlook
                        </a>
                    </div>
                </div>

                <div class="d-grid gap-3 mt-4">
                    <a href="~/settings#account-details" class="btn btn-outline-secondary btn-lg">Back to Account Settings</a>
                </div>
            </div>
            <!-- Copyright -->
            <partial name="~/Pages/Shared/_Copyright.cshtml" />
        </div>

        <!-- Background -->
        <div class="position-absolute top-0 end-0 w-50 h-100 bg-position-center bg-repeat-0 bg-size-cover d-none d-xl-block" style="background-image: url(/img/account/signin-bg.jpg);"></div>
    </section>
</main>

<!-- Back to top button -->
<a href="#top" class="btn-scroll-top" data-scroll>
    <span class="btn-scroll-top-tooltip text-muted fs-sm me-2">Top</span>
    <i class="btn-scroll-top-icon bx bx-chevron-up"></i>
</a>
