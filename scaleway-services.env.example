# Environment variables for Yuzu with Scaleway services
# Copy this file to scaleway-services.env and update with your actual credentials

# Scaleway PostgreSQL settings
DataStorageConfig__ConnectionString=Host=<POSTGRES_ENDPOINT>;Database=yuzu;Username=<DB_USERNAME>;Password=<DB_PASSWORD>;SslMode=Require

# Scaleway Object Storage settings
S3Settings__ServiceUrl=https://s3.fr-par.scw.cloud
S3Settings__BucketName=<YOUR_BUCKET_NAME>
S3Settings__BackgroundsContainer=backgrounds
S3Settings__AccessKey=<YOUR_ACCESS_KEY>
S3Settings__SecretKey=<YOUR_SECRET_KEY>

# Email settings - for actual emails, update with SMTP server details
# For local testing with MailHog, use:
# MailConnectionConfig__smtpServer=mailhog
# MailConnectionConfig__smtpPort=1025
MailConnectionConfig__smtpServer=<SMTP_SERVER>
MailConnectionConfig__smtpPort=<SMTP_PORT>
MailConnectionConfig__smtpUsername=<SMTP_USERNAME>
MailConnectionConfig__smtpPassword=<SMTP_PASSWORD>
MailConnectionConfig__SenderName=BreakScreen Team
MailConnectionConfig__SenderEmail=no-reply@yourdomain.com

# Payment settings (if needed)
PaymentConfig__Stripe__SecretKey=<STRIPE_SECRET_KEY>
PaymentConfig__Stripe__PublishableKey=<STRIPE_PUBLISHABLE_KEY>

# Application settings
ASPNETCORE_ENVIRONMENT=Production
ASPNETCORE_URLS=http://+:80